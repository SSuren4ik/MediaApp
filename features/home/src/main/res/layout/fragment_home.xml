<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/title_top_dimen">

        <TextView
            android:id="@+id/popular_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_start_dimen"
            android:layout_marginTop="@dimen/title_top_dimen"
            android:fontFamily="@font/ubuntu_medium"
            android:text="@string/top_popular_tittle_text"
            android:textSize="@dimen/normal_text_size" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popular_music_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/title_start_dimen"
            android:layout_marginTop="@dimen/title_top_dimen"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/new_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_start_dimen"
            android:layout_marginTop="@dimen/title_top_dimen"
            android:fontFamily="@font/ubuntu_medium"
            android:text="@string/new_releases_tittle_text"
            android:textSize="@dimen/normal_text_size" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/new_music_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/title_start_dimen"
            android:layout_marginTop="@dimen/title_top_dimen"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/top_downloads_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_start_dimen"
            android:layout_marginTop="@dimen/title_top_dimen"
            android:fontFamily="@font/ubuntu_medium"
            android:text="@string/top_downloads_tittle_text"
            android:textSize="@dimen/normal_text_size" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_downloads_music_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/title_start_dimen"
            android:layout_marginTop="@dimen/title_top_dimen"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>
