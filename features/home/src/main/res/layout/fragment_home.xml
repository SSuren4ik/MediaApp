<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".presentation.HomeFragment">

    <TextView
        android:id="@+id/popular_tittle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/top_popular_tittle_text"
        android:textSize="@dimen/normal_text_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popular_music_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/new_tittle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/new_releases_tittle_text"
        android:textSize="@dimen/normal_text_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/new_music_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/_tittle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/top_downloads_tittle_text"
        android:textSize="@dimen/normal_text_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_downloads_music_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent" />
</LinearLayout>
